/* pages/drawBill/service/service.wxss */
page{
  background-color: #ededed;
}
.section-list-wtap{
  padding-bottom: 96rpx;
}
.section{
  margin-bottom: 20rpx;
  background-color: #fff;
}
.section-title{
  height: 48rpx;
  line-height: 48rpx;
  padding: 20rpx 30rpx 20rpx 50rpx;
  position: relative;
}
.section-title::before{
  content: '';
  width: 8rpx;
  height: 48rpx;
  position: absolute;
  left: 30rpx;
  top: 20rpx;
  background-color: #ff9900;
}
.service-list{
  font-size: 28rpx;
  padding: 0 20rpx 20rpx;
  flex-wrap: wrap;
}
.service-item-wrap{
  width: 25%;
}
.service-item{
  height: 100rpx;
  border: 1rpx solid #e4e4e4;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin: 10rpx;
}
.service-item-active{
  background-color: #ff9900;
  color: #fff;
  border-color: #ff6600;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  border-top: 1rpx solid #f2f2f2;
}
.footer-tip{
  padding: 0 30rpx;
  text-align: right;
  line-height: 96rpx;
}
.pre-btn{
  width: 120rpx;
  height: 96rpx;
  text-align: center;
  font-size: 26rpx;
  border-right: 1rpx solid #f2f2f2;
}
.pre-btn .icon{ 
  width: 32rpx;
  height: 32rpx;
  padding-top: 15rpx;
}
.last-btn{
  width: 180rpx;
  text-align: center;
  background-color: #ff3300;
  color: #fff;
  line-height: 96rpx;
}