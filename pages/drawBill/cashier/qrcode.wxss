/* pages/drawBill/cashier/qrcode.wxss */
page{
  background-color: #ff9900;
  height: 100%;
}
.inner-box{
  width: 660rpx;
  height: 100%;
  padding: 15rpx;
  background-color: #FFFFFF;
  text-align: center;
}
.price{
  font-size: 60rpx;
  padding-top: 30rpx;
}
.price-txt{
  color: #999;
}
.qrcode_wrap{
  padding: 30rpx 0;
  display: flex;
  justify-items: center;
  justify-content: center;
}
.canvas{
  width: 460rpx;
  height: 460rpx;
  margin-left: 40rpx;
}
.qrcode-pic{
  width: 500rpx;
  height: 500rpx;
  display: inline-block;
}
.tip-txt{
  border-top: 1rpx solid #e4e4e4;
  margin: 0 30rpx;
  padding-top: 50rpx;
}
.other-tip{
  font-size: 30rpx;
}
.footer{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #e4e4e4;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #FFFFFF;
  text-align: center;
}