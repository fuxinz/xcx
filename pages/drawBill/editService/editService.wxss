.red{
  color: #ff3300;
}
.blue{
  color: #33a5ff;
}
.orange{
  color: #ff6600;
}
.stepper{
  width: 180rpx;
  height: 60rpx;
  text-align: center;
}
.stepper .btn{
  line-height: 50rpx;
  font-size: 40rpx;
  border: 1rpx solid #f2f2f2;
}
.stepper-input-wrap{
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}
.service-item-main{
  padding: 0 30rpx 0 112rpx;
  color: #999;
  font-size: 28rpx;
}
.service-specific-item{
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}
.service-specific-item_txt{
  height: 78rpx;
}
.price{
  padding-top: 10rpx;
  align-items: center;
}
.delete-btn{
  padding-top: 30rpx;
  text-align: right;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100;
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  border-top: 1rpx solid #f2f2f2;
}
.footer-tip{
  padding: 0 30rpx;
  text-align: right;
  padding-top: 10rpx;
}
.footer-tip_txt{
  color: #999;
  font-size: 28rpx;
}
.pre-btn{
  width: 120rpx;
  height: 96rpx;
  text-align: center;
  font-size: 26rpx;
  border-right: 1rpx solid #f2f2f2;
}
.pre-btn .icon{ 
  width: 32rpx;
  height: 32rpx;
  padding-top: 15rpx;
}
.last-btn{
  width: 180rpx;
