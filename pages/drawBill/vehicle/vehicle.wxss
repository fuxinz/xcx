/* pages/drive/vehicle/vehicle.wxss */
.header-title{
  padding-left: 50rpx;
}
.hot-list{
  flex-wrap: wrap;
  text-align: center;
  padding: 30rpx;
}
.hot-list-item{
  width: 172.5rpx;
  height: 150rpx;
}


.page-list{
  background-color: #FFFFFF;
}
.section-title{
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 40rpx;
  background-color: #ededed;
}
.page-list-item{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #F3F3F3;
}
.brand-logo{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx 20rpx;
}
.sider-list-wrap{
  position: fixed;
  right: 0;
  top: 0;
  width: 50rpx;
  height: 100%;
  align-items: center;
  text-align: center;
  font-size: 28rpx;
}
.sider-list-item{
  width: 50rpx;
  height: 45rpx;
  line-height: 45rpx;
}

.model-list-wrap{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  text-align: center;
}
.model-left1{
  width: 100rpx;
  height: 100%;
}
.model-left2{
  width: 200rpx;
  height: 100%;
}
.model-list-wrap .flex1{
  height: 100%;
  overflow: auto;
  background-color: #FFFFFF;
  font-size: 30rpx;
}
.type-list-item,.car-list-item{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #F3F3F3;
  overflow: hidden;
}
.type-list-title,.car-list-title{
  height: 68rpx;
  line-height: 68rpx;
  padding-left: 20rpx;
  background-color: #ededed;
}