@import "../../wxParse/wxParse.wxss";
page{
  background-color: #f4f5f6;
}
.html-wrap{
  padding: 0 30rpx;
}
.header{
  position: relative;
}
.header>image{
  width: 100%;
  height: 300rpx;
  display: block;
}
.header-inner{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 300rpx;
  text-align: center;
  color: #fff;
}
.header-title{
  font-size: 40rpx;
  line-height: 80rpx;
  padding-top: 80rpx;
}
.wxParse-img{
  width: 100% !important;
}

.form-wrap{
  background-color: #fff;
  margin: 0 30rpx;
}
.form-header>image{
  width: 100%;
  height: 360rpx;
}
.form-tip{
  text-align: center;
  font-size: 28rpx;
  padding: 50rpx 0 30rpx 0;
}
.form-item{
  padding: 0 90rpx 30rpx;
}
.form-item>input{
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #f4f5f6;
  border-radius: 10rpx;
}
.form-btn{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6600;
  color: #fff;
  font-size: 30rpx;
}
.form-footer{
  padding: 0 90rpx 50rpx;
  font-size: 28rpx;
}
.form-footer-title{
  text-align: center;
  line-height: 80rpx;
}
.form-footer-title text{
  position: relative;
}
.form-footer-title text::before{
  content: '';
  height: 2rpx;
  width: 100rpx;
  position: absolute;
  left: -110rpx;
  top: 20rpx;
  background-color: #000;
}
.form-footer-title text::after{
  content: '';
  height: 2rpx;
  width: 100rpx;
  position: absolute;
  right: -110rpx;
  top: 20rpx;
  background-color: #000;
}