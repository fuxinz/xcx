/* pages/socialMarketing/createAcitivityTwo.wxss */
page{
  background-color: #f4f5f6;
  box-sizing: border-box
}
.warp-content{
  font-size: 28rpx;
  padding-bottom: 98rpx;
  position: relative
}
.active-eidt-title {
    position: relative;
    display: flex;
    padding: 20rpx 30rpx;
    font-size: 36rpx;
    background-color: #ededed;
}
.active-eidt-title image{
  width: 36rpx;
  height: 43rpx;
  margin-right: 10rpx;
}
.input-con{
  background-color: #FFFFFF;
  padding-left: 30rpx;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #dfdfdf;
  padding: 20rpx 0;
}
.no-justify-content{
  justify-content: flex-start
}
.item>view:first-child{
  width: 30%;
}
.item>input, .item>textarea{
  flex: 1;
}
.item>textarea{
  height: 200rpx;
}
.img-con{
  position: relative;
  box-sizing: border-box;
  padding-right: 30rpx;
  border-bottom: 30rpx solid #FFFFFF;
}
.camera-con{
  width: 100%;
  height: 360rpx;
  text-align: center
}
.camera-con>image{
  width: 144rpx;
  height: 126rpx;
  margin-top: 40rpx;
}
.pic-con{
  position: absolute;
  width: 96%;
  height: 360rpx;
  top:0;
  margin-right: 30rpx;
}
.pic-con .show-img{
  width: 100%;
  height: 100%;
}
.pic-con .clear-img{
  position: absolute;
  top: 0;
  left: 0;
  width: 46rpx;
  height: 46rpx;
}
.i-type{
  padding: 10rpx 30rpx;
  border: 1px solid #f30;
  border-radius: 10rpx;
  color: #f30;
  font-size: 24rpx;
  width: auto !important;
  text-align: center
}
.i-type>image{
  width: 48rpx;
  height: 48rpx;
}
.i-condition{
  border: 1rpx solid #dfdfdf;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.i-condition>input{
  width: 150rpx;
  text-align: center
}
.color-b{
  color: #bbb;
  font-size: 24rpx
}
.i-time{
  display:flex;
  width:70%;
  justify-content: space-between;
  margin-right: 30rpx;
  align-items: center
}
.footer-con{
  display: flex;
  background-color: #FFFFFF;
  border-top: 1rpx solid #e4e4e4;
  position: fixed;
  bottom: 0;
  width: 100%;
  font-size: 24rpx;
  align-items: stretch;
  z-index: 100
}
.footer-nav{
  width: 15%;
  height: 100%;
  text-align: center;
}
.footer-nav{
  padding-top: 10rpx;
  padding-bottom: 10rpx
}
.footer-con>view:first-child, .footer-con>view:nth-child(2){
  border-right: 1rpx solid #e4e4e4
}
.back-icon{
  width: 18rpx;
  height: 38rpx;
}
.home-icon{
  width: 48rpx;
  height: 38rpx;
}
.info-icon{
  width: 42rpx;
  height: 41rpx;
}
.add-btn{
  color:#FFFFFF;
  background-color: #f30;
  font-size: 34rpx;
  text-align: center;
  width: 55%;
  height: auto;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  border-radius: 0;
}