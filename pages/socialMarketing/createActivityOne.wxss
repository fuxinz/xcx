.footer-con{
  display: flex;
  background-color: #FFFFFF;
  border-top: 1rpx solid #e4e4e4;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 24rpx;
  align-items: stretch
}
.active-item-btn{
  position: absolute;
  right: 30rpx;
  bottom: 50rpx;
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: rgba(255 , 255, 255, .8);
