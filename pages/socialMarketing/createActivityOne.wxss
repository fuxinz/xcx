/* pages/socialMarketing/createActivityOne.wxss */
page{
  background-color: #f4f5f6;
  box-sizing: border-box
}
.warp-content{
  height: 100%;
  background-color: #f4f5f6;
  overflow: scroll;
  padding-bottom: 98rpx;
  padding-top: 20rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.active-item{
  position: relative;
  width: 100%;
  height: 300rpx;
  /* padding: 42rpx 42rpx; */
  border-radius: 14rpx;
  overflow: hidden;
  margin-bottom: 27rpx;
}
.bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  opacity: .6;
}
.bg image{
    display: block;
    width: 100%;
    height: 100%
}
.active-title {
    position: relative;
    display: flex;
    justify-content: space-between;
    font-size: 36rpx;
    height: 67rpx;
    line-height: 45rpx;
    margin-top: 120rpx;
    /* margin-bottom: 20rpx; */
    padding: 0 20rpx
}
.tag-type {
    position: absolute;
    top: 0;
    left: 28rpx;
    width: 82rpx;
    height: 88rpx;
}
.tag-type image{
  width: 100%;
  height: 100%
}
.active-bottom{
  padding: 0 20rpx;
  font-size: 24rpx;
}
/*checkbox---->*/
checkbox{
  width: 40rpx;
  height: 40rpx;
}
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1rpx solid #0c0;
  background: #0c0;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
