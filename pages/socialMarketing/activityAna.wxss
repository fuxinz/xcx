/* pages/socialMarketing/activityAna.wxss */
page{
  background-color: #f4f5f6;
  box-sizing: border-box
}
.head-top{
  position: relative;
  height: auto;
  color: #FFFFFF;

}
.head-top>image{
  width: 100%;
  height: 200rpx;
}
.top-text{
  text-align: center;
  position: absolute;
  top: 60rpx;
  font-size: 24rpx;
  width: 100%
}
.top-text>view:first-child{
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.item{
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
}
.i-top{
  line-height: 80rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #dfdfdf
}
.i-tr-con{
  display: flex;
}
.i-tr-con>view{
  width: 25%;
  text-align: center;
  padding: 30rpx 0;

}
.i-li>view:first-child{
  font-weight: bold;
  margin-bottom: 20rpx;
}
.i-li>view:last-child{
  color: #999;
  font-size: 24rpx;
}
.look-info{
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #f9f9f9;
  color: #999
}