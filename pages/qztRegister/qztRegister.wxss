.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background-color: #fff;
}
.pre-btn{
  width: 120rpx;
  height: 96rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 30rpx;
  border-right: 1rpx solid #f2f2f2;
  background-color: #fff;
}
.pre-btn .icon{ 
  width: 22rpx;
  height: 32rpx;
  padding-top: 15rpx;
}
.pay-btn{
  font-size: 40rpx;
  line-height: 96rpx;
  color: #fff;
  background-color: #ff9900;
}