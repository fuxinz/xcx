/* pages/busness/busnessIndex/index.wxss */
page{
  height: 100%
}
.warp-content{
  height: 100%;
  background-color: #f4f5f6;
}
.header-con{
  display: flex;
  padding: 10rpx 0 25rpx 0;
  background-color: #FFFFFF;
}
.footer-con{
  display: flex;
  padding: 25rpx 0 25rpx 0;
  background-color: #FFFFFF;
  border-top: 1rpx solid #e4e4e4;
  position: fixed;
  bottom: 0;
  width: 100%
}
.nav{
  width: 50%;
  text-align: center;
  color: #999999;
}
.header-con>view:first-child, .footer-con>view:first-child{
  border-right: 1rpx solid #e4e4e4
}
.nav.active{
  color: #4162ff;
}
.tab{
  padding: 20rpx 30rpx;
}
.item{
  background-color: #FFFFFF;
  margin-top: 30rpx
}
.i-li{
  display: flex;
  justify-content: space-around;
  text-align: center;
  padding: 30rpx 0;
}
.s-border-bottom{
  border-bottom: 1rpx solid #e4e4e4
}
.space-other{
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #999999;
}
.space-other>view:last-child{
  display: flex;
}
.li-con>view:first-child{
  font-size: 36rpx;
  font-weight: bold;
}
.li-con>view:last-child{
  font-size: 26rpx;
  color: #999999;
}
.outer-item{
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}
.item-set-width{
  width: 70%;
  margin-top: 0;
}
.btn-con{
  background-color: #f90;
  color: #FFFFFF;
  font-size: 26rpx;
  text-align: center;
  width: 30%;
  margin-left: 20rpx;
}
.btn-con>image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 50%;
  transform: translateY(-50%);
}