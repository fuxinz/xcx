page{
  background-color: #f4f5f6;
}
.form-item-list{
  padding: 0 30rpx;
  background-color: #fff;
}
.form-item{
  min-height: 90rpx;
  border-bottom: 1rpx solid #f8f8f8;
  align-items: center
}
.form-item-title{
  width: 230rpx;
  padding-left: 15rpx;
  line-height: 90rpx;
}
.form-item-title::before{
  content: ' * ';
  color: red;
}
.form-item .icon-more{
  width: 20rpx;
  height: 32rpx;
  padding-left: 20rpx;
}
.form-item-textarea{
  width: 100%;
  height: 200rpx;
  padding: 20rpx 0;
}
.btn{
  background-color: #ff9900;
  color: #fff;
  font-size: 28rpx;
  margin: 40rpx 30rpx 70rpx;
}