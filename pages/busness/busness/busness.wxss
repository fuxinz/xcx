page{
  background-color: #f4f5f6;
  box-sizing: border-box;
  font-size: 28rpx;
}
.header{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #f4f5f6;
  background-color: #f4f5f6;
}
.search-con{
  width: 90%;
  height: 70rpx;
  margin: 20rpx auto;
  position: relative;
  border-radius: 10rpx;
  background-color: #FFFFFF;
}
.search-con>input{
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
}
.search-con>image{
  width: 38rpx;
  height: 38rpx;
  position:absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
}
.sheet-tab{
  width: 100%;
  display: flex; 
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  box-sizing: border-box;
  z-index: 100
}
.s-title{
  font-size: 32rpx;
  display: flex;
  align-items: center
}
.s-title>image{
  width: 28rpx;
  height: 17rpx;
  margin-left: 40rpx;
}
.s-num{
  text-align: right;
  color: #999;
  font-size: 24rpx;
}
.ceng{
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  width: 100%;
  top: 190rpx;
  box-sizing: border-box;
  z-index: 100;
  height: 100%;
}
.li{
  display: flex;
  justify-content: space-between;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #dfdfdf;
  align-items: center;
  padding: 30rpx;
}
.li>image{
  width: 40rpx;
  height: 29rpx;
}
.busness-list{
  
}
.busness-item{
  background-color: #FFFFFF;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.busness-item_top{
  padding: 30rpx 0;
}
.busness-item .logo{
  width: 84rpx;
  height: 84rpx;
  padding-right: 30rpx;
}
.busness-item-info{
  font-size: 26rpx;
  color: #999999;
}
.busness-item-plate{
  font-size: 30rpx;
  color: #333;
  line-height: 50rpx;
}
.busness-item-state{
  color: #ff6600;
  font-size: 30rpx;
}
.busness-item_bottom{
  border-top: 1rpx solid #f2f2f2;
  padding: 20rpx 0;
  text-align: right;
}

.bill-btn{
  width: 156rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  display: inline-block;
  background-color: #fff;
  color: #333;
  padding: 0;
  margin-left: 10rpx;
}
.bill-confirm-btn{
  color: #ff3300;
}
.bill-confirm-btn::after {
  border: 1rpx solid #ff3300;
}