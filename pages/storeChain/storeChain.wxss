/* pages/storeChain/storeChain.wxss */
.tabber-wrap{
  height: 100rpx;
  line-height: 100rpx;
  white-space: nowrap;
}
.tabbar-item{
  min-width: 100rpx;
  padding: 0 30rpx;
  display: inline-block;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}
.tabbar-item-active{
  color: #4162ff;
  position: relative;
}
.tabbar-item-active::after{
  content: '';
  width: 60rpx;
  height: 8rpx;
  background-color: #4162ff;
  position: absolute;
  left: 50%;
  bottom: 10rpx;
  margin-left: -30rpx;
}
.banner{
  width: 100%;
  height: 240rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}