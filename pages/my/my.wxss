/* pages/my/my.wxss */
page{
  background-color: #ededed;
  font-size: 28rpx;
}
.header{
  height: 160rpx;
  background-color: #5265ff;
  padding: 0 30rpx;
  align-items: center;
  color: #fff;
  font-size: 26rpx;
}
.user-avatar-wrap{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.user-avatar{
  width: 100%;
  height: 100%;
}
.header .icon-more{
  width: 30rpx;
  height: 48rpx;
}
.yellow{
  color: #ff9900;
}
.green{
  color: #00cc00;
}
.gray{
  color: #999999;
}
.code-entry{
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx 0 30rpx;
  text-align: center;
  background-color: #ffdf25;
  box-shadow: 0 1rpx 10rpx #999999;
}
.list-item-title{
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebebeb;
  color: #999999;
}
.list-item{
  padding: 0 30rpx;
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebebeb;
  align-items: center;
}
.list-item .icon-main{
  width: 48rpx;
  height: 48rpx;
  padding-right: 20rpx;
}
.list-item .icon-more{
  width: 20rpx;
  height: 32rpx;
  padding-left: 20rpx;
}
.btn{
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border: none;
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #ff3300;
}