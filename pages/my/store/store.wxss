/* pages/my/store/store.wxss */
page{
  background-color: #ededed;
  font-size: 28rpx;
  min-height: 640rpx;
}
.list-item{
  padding: 0 30rpx;
  min-height: 90rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebebeb;
  align-items: center;
}
.list-item .icon-more{
  width: 20rpx;
  height: 32rpx;
  padding-left: 20rpx;
}
.list-item> input{
  height: 90rpx;
  line-height: 90rpx;
}
.list-item-big{
  margin-top: 20rpx;
  padding: 0 30rpx 30rpx;
}
.list-item-title{
  width: 200rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 25rpx 0;
}
.list-item-textarea{
  border: 1rpx solid #ebebeb;
  width: 100%;
  height: 206rpx;
  border-radius: 10rpx;
}
.pictrue-wrap{
  width: 100%;
  min-height: 206rpx;
  line-height: 206rpx;
  text-align: center;
}
.picture{
  width: 100%;
}
.btn{
  background-color: #118ee9;
  color: #fff;
  font-size: 28rpx;
  margin: 40rpx 30rpx 70rpx;
}