page{
  background-color: #ededed;
  font-size: 28rpx;
  min-height: 640rpx;
}
.list-item{
  padding: 0 30rpx;
  height: 90rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebebeb;
  align-items: center;
}
.list-header{
  height: 200rpx;
  margin: 30rpx 0;
  background-color: #fff;
  align-items: initial;
}
.list-header-title{
  padding-top: 20rpx;
  width: 300rpx;
}
.list-header-logo{
  margin-top: 28rpx;
  width: 144rpx;
  height: 144rpx;
  line-height: 144rpx;
  background-color: #e4e4e4;
  text-align: center;
  border-radius: 72rpx;
  overflow: hidden;
}
.list-header-logo>image{
  width: 100%;
  height: 100%;
}
.list-item .icon-more{
  width: 20rpx;
  height: 32rpx;
  padding-left: 20rpx;
}
