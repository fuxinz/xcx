page{
  background-color: #f4f5f6;
  box-sizing: border-box;
  font-size: 28rpx;
}
.header{
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #f4f5f6;
  border-bottom: 1rpx solid #f4f5f6;
}
.search-con{
  width: 100%;
  height: 60rpx;
  position: relative;
  border-radius: 10rpx;
  background-color: #f4f5f6;
}
.search-con>input{
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
}
.search-con>image{
  width: 38rpx;
  height: 38rpx;
  position:absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
}

/*checkbox---->*/
checkbox{
  width: 40rpx;
  height: 40rpx;
}
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1rpx solid #0c0;
  background: #0c0;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
