/* pages/register/step2/step2.wxss */
page{
  width: 100%;
  height: 100%;
}
.page-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header-tip{
  padding: 100rpx 0 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}
.check-wrap{
  width: 510rpx;
}
.check-item{
  height: 140rpx;
  text-align: center;
  font-size: 28rpx;
  color: #089BF0;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  background-image: linear-gradient(#ceebfc 0%, #c7e8fc 50%, #6ac3f6 100%);
  position: relative;
}

.check-item-title{
  padding: 30rpx 0 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.check-item-icon{
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background:linear-gradient(245deg,rgba(0,252,255,1),rgba(8,153,238,1));
  display: none;
  align-items: center;
  justify-content: center;
  
}
.check-item-active{
  background: #fff;
}
.check-item-active .check-item-icon{
  display: flex;
}
.group-btn{
  width: 570rpx;
  padding-top: 200rpx;
}
.btn{
  width: 338rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 40rpx;
  background:linear-gradient(90deg,rgba(5,240,255,1) 0%,rgba(8,155,240,1) 100%);
}
.footer-tip{
  text-align: center;
  padding-bottom: 50rpx;
  font-size: 30rpx;
}